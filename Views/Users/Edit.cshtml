@model ProfileFormViewModel

@{
    ViewData["Title"] = "Edit Profile";
}



<h4>Create a new User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
          <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="EmailAccount" class="control-label"></label>
                <input asp-for="EmailAccount" class="form-control" />
                <span asp-validation-for="EmailAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <button type="submit" class="btn btn-primary d-block mt-4">Save</button>

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Employees">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

